<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductsPrime">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:paddingEnd="@dimen/spacing_medium"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/armata"
            android:gravity="center"
            android:padding="5dp"
            android:text="Product"
            android:textColor="#04441F"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="22dp"
            android:id="@+id/price"
            android:layout_below="@id/product_image"
            android:textColor="@android:color/black"/>


        <!--<TextView-->
            <!--android:id="@+id/price"-->
            <!--android:layout_below="@id/product_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:text="dfsdfsdf"-->
            <!--android:textColor="#000000"-->
            <!--android:padding="40dp"-->
            <!--android:textSize="35dp" />-->


        <LinearLayout
            android:id="@+id/floq"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_below="@id/price"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/rok" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:hint="Enter Quantity"
                android:id="@+id/incre"
                android:gravity="center"
                android:maxLength="4"
                android:textSize="22dp"
                android:layout_below="@id/price"
                android:layout_toRightOf="@+id/minus"
                android:layout_weight="3"
                android:inputType="numberDecimal"
                android:translationX="-5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:translationX="-10dp"
                android:text="Kg"
                android:textColor="#000"
                android:fontFamily="@font/gfs_didot"
                android:textSize="24dp"
                android:padding="5dp"
                android:height="50dp"/>
            <!--<android.support.v7.widget.AppCompatSpinner-->
                <!--android:gravity="center"-->
                <!--android:layout_below="@id/price"-->
                <!--android:id="@+id/pickup"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_weight="1"-->
                <!--&gt;-->
            <!--</android.support.v7.widget.AppCompatSpinner>-->


            <ImageView
                android:id="@+id/plus"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_below="@id/price"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:src="@drawable/pop" />

        </LinearLayout>

        <!--<Spinner-->
            <!--android:layout_width="60dp"-->
            <!--android:id="@+id/spin"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_below="@id/price"-->
            <!--android:layout_marginLeft="224dp"            android:layout_alignLeft="@+id/floq"-->
             <!--/>-->

        <LinearLayout
            android:id="@+id/we"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@id/floq"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:gravity="left"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_width="190dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="#27BABA"
                app:cardCornerRadius="7dp"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/check"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:text="Check Price for above quantity"
                    android:textColor="@android:color/white"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="35dp"
                    android:id="@+id/cross"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|right"
                    android:adjustViewBounds="false"
                    android:src="@drawable/ic_action_rigth" />
            </android.support.v7.widget.CardView>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expa"
                android:layout_width="180dp"
                android:layout_height="70dp"
                app:ael_duration="400"

                app:ael_interpolator="linear"
                app:ael_orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/checks"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/fauna_one"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/we"
            android:layout_marginVertical="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFF"

            android:paddingTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addtocat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#30978E"
                android:fontFamily="@font/gfs_didot"
                android:text="Add to Cart"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#7BBB27"
                android:id="@+id/buynow"
                android:fontFamily="@font/gfs_didot"
                android:text="GO to Cart"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/lt"-->
        <!--android:layout_height="wrap_content">-->
        <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/cart"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="Add to Cart"-->
        <!--android:layout_below="@id/price"/>-->

        <!--</LinearLayout>-->


    </RelativeLayout>
</LinearLayout>

