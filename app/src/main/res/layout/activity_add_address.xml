<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
        >

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/logo_main" />


    <EditText
        android:id="@+id/name"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
     />

    <EditText
        android:id="@+id/nick_name"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:ems="10"
        android:hint="Nick Name"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:layout_below="@+id/name"
      />

    <EditText
        android:id="@+id/house_flat_shop_number"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="House/flat/shop number "
        android:inputType="textPersonName"
        android:layout_below="@+id/nick_name"
    />

    <Spinner
        android:id="@+id/spinArea"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:layout_below="@+id/house_flat_shop_number"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/spinCity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="163dp"
        android:layout_marginRight="163dp"
        android:layout_below="@+id/spinArea"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/spinState"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="166dp"
        android:layout_marginRight="166dp"
        android:layout_below="@id/spinCity"
        android:layout_centerHorizontal="true"
      />

    <Spinner
        android:id="@+id/spinCountry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="166dp"
        android:layout_marginRight="166dp"
        android:layout_below="@+id/spinState"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/pincode"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:ems="10"
        android:hint="Pin Code"
        android:inputType="textPersonName"
        android:layout_below="@+id/spinCountry"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/detail_address"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:ems="10"
        android:hint="Detail Address"
        android:inputType="textPersonName"
        android:layout_below="@+id/pincode"
        android:layout_centerHorizontal="true"
       />

    <EditText
        android:id="@+id/contact_number"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:ems="10"
        android:hint="Contact No."
        android:inputType="textPersonName"
        android:layout_below="@+id/detail_address"
        android:layout_centerHorizontal="true"
  />

    <Button
        android:id="@+id/add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="143dp"
        android:layout_marginRight="143dp"


        android:background="@color/colorPrimary"
        android:padding="2sp"
        android:text="Add address"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_below="@+id/contact_number"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
</ScrollView>
